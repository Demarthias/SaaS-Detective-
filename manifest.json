{
  "manifest_version": 5,
  "name": "SaaS Detective",
  "version": "1.0.1",
  "description": "Instantly identify the tech stack and SaaS tools used by any website. Perfect for developers, marketers, and business analysts.",
  "short_name": "SaaS Detective",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["dist/content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
